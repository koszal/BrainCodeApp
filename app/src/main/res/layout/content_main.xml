<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="[DLVK]"
        android:id="@+id/clanTag"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/clanName"
        android:layout_below="@+id/clanTag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:text="Dalvik Gaming" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Koszal"
        android:id="@+id/displayName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/clanTag"
        android:layout_toEndOf="@+id/clanTag"
        android:layout_marginLeft="@dimen/small_padding" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/android_main_go_to_bnet_button"
        android:id="@+id/goToBnetButton"
        android:layout_below="@+id/clanName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/large_padding"
        android:layout_marginRight="@dimen/large_padding"
        android:layout_marginTop="@dimen/small_padding"
        android:layout_marginBottom="@dimen/large_padding" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/activity_main_career_summary_label"
        android:id="@+id/careerSummaryHeader"
        android:layout_below="@+id/goToBnetButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_primary_race_label"
        android:id="@+id/primaryRaceLabel"
        android:layout_below="@+id/careerSummaryHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/medium_padding" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ZERG"
        android:id="@+id/primaryRace"
        android:layout_alignTop="@+id/primaryRaceLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_career_total_games_label"
        android:id="@+id/careerTotalGamesLabel"
        android:layout_below="@+id/primaryRaceLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/medium_padding" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4837"
        android:id="@+id/careerTotalGames"
        android:layout_alignTop="@+id/careerTotalGamesLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</merge>